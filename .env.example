# Copy this file to `.env` and adjust values for your environment.
# Local dev defaults are safe for a local machine. Production must override all CHANGE_ME values.

# Docker image versions
NAKAMA_VERSION=3.17.0
POSTGRES_VERSION=15

# Postgres
POSTGRES_DB=nakama
POSTGRES_USER=nakama
POSTGRES_PASSWORD=localdb
POSTGRES_PORT=5432

# Nakama HTTP/WS + console bind ports on host
NAKAMA_HTTP_PORT=7350
NAKAMA_CONSOLE_PORT=7351

# Nakama node and DB connection
NAKAMA_NODE_NAME=pdh-nakama
NAKAMA_DATABASE_ADDRESS=nakama:localdb@postgres:5432/nakama?sslmode=disable

# Required security keys.
# Local defaults are intentionally non-secret so first run works out-of-the-box.
# Production must override all values below with strong random secrets.
NAKAMA_SOCKET_SERVER_KEY=dev_socket_server_key_change_me
NAKAMA_SESSION_ENCRYPTION_KEY=dev_session_encryption_key_change_me
NAKAMA_SESSION_REFRESH_ENCRYPTION_KEY=dev_refresh_encryption_key_change_me
NAKAMA_RUNTIME_HTTP_KEY=dev_runtime_http_key_change_me
NAKAMA_CONSOLE_SIGNING_KEY=dev_console_signing_key_change_me

# Console credentials.
# Production must override.
NAKAMA_CONSOLE_USERNAME=admin
NAKAMA_CONSOLE_PASSWORD=admin123

# Optional logging level: debug|info|warn|error
NAKAMA_LOG_LEVEL=info

# Smoke test defaults
SMOKE_HOST=127.0.0.1
SMOKE_PORT=7350
SMOKE_USE_SSL=false
SMOKE_CLIENTS=4
SMOKE_TABLE_ID=smoke-main
SMOKE_MATCH_MODULE=pdh_smoke
SMOKE_RPC_ID=pdh_smoke_ensure_match

# Remote pull helper (`pnpm online pull`)
# ONLINE_REMOTE=user@your-server
# ONLINE_DIR=/root/PDH
# ONLINE_BRANCH=main
# ONLINE_SSH_OPTS=-i ~/.ssh/id_ed25519 -p 22
